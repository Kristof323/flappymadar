<Window x:Class="FlappyBird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flappy Bird WPF" Height="550" Width="850">
    <Canvas x:Name="GameCanvas" Focusable="True">
        <!-- Háttér -->
        <Image x:Name="BackgroundImage" Source="/kepek/background.jpg" Canvas.Left="0" Canvas.Top="0" Stretch="Fill" Height="534" Width="850"/>

        <!-- Madár -->
        <Image x:Name="Bird" Source="/kepek/flappymid.png" Width="50" Height="40" Canvas.Left="100" Canvas.Top="200"/>

        <!-- Eső cseppek -->
        <Rectangle x:Name="RainDrop1" Width="2" Height="20" Fill="LightBlue" Opacity="0.6" Canvas.Left="100" Canvas.Top="-20"/>
        <Rectangle x:Name="RainDrop2" Width="2" Height="20" Fill="LightBlue" Opacity="0.6" Canvas.Left="300" Canvas.Top="-40"/>
        <Rectangle x:Name="RainDrop3" Width="2" Height="20" Fill="LightBlue" Opacity="0.6" Canvas.Left="500" Canvas.Top="-10"/>
        <Rectangle x:Name="RainDrop4" Width="2" Height="20" Fill="LightBlue" Opacity="0.6" Canvas.Left="700" Canvas.Top="-60"/>

        <!-- Köd -->
        <Rectangle x:Name="FogOverlay" Width="800" Height="500" Fill="Gray" Canvas.Left="0" Canvas.Top="0" Opacity="0" IsHitTestVisible="False">
            <Rectangle.OpacityMask>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Transparent" Offset="0"/>
                    <GradientStop Color="White" Offset="0.7"/>
                </LinearGradientBrush>
            </Rectangle.OpacityMask>
        </Rectangle>

        <!-- Csövek -->
        <Rectangle x:Name="TopPipe" Width="80" Height="250" Fill="Green" Canvas.Left="600" Canvas.Top="0">
            <Rectangle.RenderTransform>
                <RotateTransform Angle="180" CenterX="40" CenterY="125"/>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle x:Name="BottomPipe" Width="80" Height="250" Fill="Green" Canvas.Left="600" Canvas.Top="250"/>

        <!-- Pontszám -->
        <TextBlock x:Name="ScoreText" Text="Pont: 0" Canvas.Left="10" Canvas.Top="10" FontSize="24" Foreground="White"/>

        <!-- Game Over -->
        <Image x:Name="GameOverImage" Source="/kepek/gameover.png" Width="400" Height="200" Canvas.Left="225" Canvas.Top="175" Visibility="Collapsed"/>
        <TextBlock x:Name="FinalScoreText" Text="Végső pont: 0" Canvas.Left="300" Canvas.Top="380" FontSize="24" Foreground="White" Visibility="Collapsed"/>
    </Canvas>
</Window>
