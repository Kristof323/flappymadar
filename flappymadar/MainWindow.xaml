<Window x:Class="FlappyBird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flappy Madár"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        PreviewKeyDown="OnPreviewKeyDown"
        MouseLeftButtonDown="OnMouseLeftButtonDown">

    <Grid x:Name="RootGrid" Background="Black">

        <Canvas x:Name="GameCanvas" Width="900" Height="600" Background="Black">

            <Image x:Name="BackgroundImage"
                   Width="900" Height="600"
                   Canvas.Left="0" Canvas.Top="0"
                   Stretch="Fill" />

            <Rectangle x:Name="FogLayer"
                       Width="900" Height="600"
                       Canvas.Left="0" Canvas.Top="0"
                       Fill="White"
                       Opacity="0" />

            <Image x:Name="BirdImage"
                   Width="50" Height="40"
                   Canvas.Left="100" Canvas.Top="250" />

            <TextBlock x:Name="ScoreDisplay"
                       Text="Pont: 0"
                       Canvas.Left="20" Canvas.Top="20"
                       Foreground="White"
                       FontSize="24"
                       FontWeight="Bold" />

            <TextBlock x:Name="RainStatusDisplay"
                       Text="Eső: KI"
                       Canvas.Left="20" Canvas.Top="60"
                       Foreground="LightBlue"
                       FontSize="16" />

            <TextBlock x:Name="FogStatusDisplay"
                       Text="Köd: KI"
                       Canvas.Left="20" Canvas.Top="85"
                       Foreground="LightGray"
                       FontSize="16" />

        </Canvas>

        <Border x:Name="StartMenu"
                Background="#CC000000"
                Visibility="Visible"
                Panel.ZIndex="1000">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Background="#FF1E1E1E" Width="420" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Flappy Madár - Beállítások"
                                   Foreground="White"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Margin="0,0,0,16" />

                        <TextBlock Text="Gravitáció:" Foreground="White" Margin="0,0,0,4"/>
                        <ComboBox x:Name="GravityCombo" SelectedIndex="1" Height="32" Margin="0,0,0,12">
                            <ComboBoxItem Content="Erős"/>
                            <ComboBoxItem Content="Normál"/>
                            <ComboBoxItem Content="Gyenge"/>
                        </ComboBox>

                        <TextBlock Text="Pálya:" Foreground="White" Margin="0,0,0,4"/>
                        <ComboBox x:Name="MapCombo" SelectedIndex="0" Height="32" Margin="0,0,0,12">
                            <ComboBoxItem Content="Flappy Bird"/>
                            <ComboBoxItem Content="Petrik"/>
                        </ComboBox>

                        <TextBlock Text="Köd:" Foreground="White" Margin="0,0,0,4"/>
                        <ComboBox x:Name="FogCombo" SelectedIndex="2" Height="32" Margin="0,0,0,12">
                            <ComboBoxItem Content="Ki"/>
                            <ComboBoxItem Content="Be"/>
                            <ComboBoxItem Content="Kevés"/>
                        </ComboBox>

                        <TextBlock Text="Eső:" Foreground="White" Margin="0,0,0,4"/>
                        <ComboBox x:Name="RainCombo" SelectedIndex="2" Height="32" Margin="0,0,0,16">
                            <ComboBoxItem Content="Ki"/>
                            <ComboBoxItem Content="Be"/>
                            <ComboBoxItem Content="Kevés"/>
                        </ComboBox>

                        <Button x:Name="StartButton"
                                Content="START"
                                Height="40"
                                Background="#FF0078D4"
                                Foreground="White"
                                FontSize="16"
                                FontWeight="Bold"
                                Click="StartButton_Click"
                                Margin="0,0,0,12"/>

                        <TextBlock Text="Ugrás: Space / Fel nyíl / Bal klikk"
                                   Foreground="LightGray"
                                   FontSize="12"
                                   TextAlignment="Center" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <Border x:Name="GameOverPanel"
                Background="#CC000000"
                Visibility="Collapsed"
                Panel.ZIndex="1100">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="520">
                <Border Background="#FF1E1E1E" Padding="18">
                    <StackPanel>
                        <TextBlock Text="JÁTÉK VÉGE!"
                                   Foreground="Red"
                                   FontSize="44"
                                   FontWeight="Bold"
                                   TextAlignment="Center"
                                   Margin="0,0,0,8" />

                        <TextBlock x:Name="FinalScoreText2"
                                   Text="Végső pont: 0"
                                   Foreground="White"
                                   FontSize="26"
                                   TextAlignment="Center"
                                   Margin="0,0,0,14" />

                        <Button Content="Vissza a menübe"
                                Height="38"
                                Click="BackToMenuButton_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

    </Grid>
</Window>
