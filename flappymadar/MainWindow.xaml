<Window x:Class="FlappyBird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flappy Bird - WPF" Height="600" Width="900" 
        WindowStartupLocation="CenterScreen" Background="Black">
    <Canvas x:Name="GameCanvas" Background="SkyBlue" Focusable="True">

        <!-- Háttér kép -->
        <Image x:Name="BackgroundImage" 
               Canvas.Left="0" Canvas.Top="0" 
               Width="900" Height="600" 
               Stretch="Fill"/>

        <!-- Madár -->
        <Image x:Name="BirdImage" 
               Width="50" Height="40" 
               Canvas.Left="100" Canvas.Top="250"/>

        <!-- Köd réteg -->
        <Rectangle x:Name="FogLayer" 
                   Width="900" Height="600" 
                   Fill="Gray" Opacity="0" 
                   Canvas.Left="0" Canvas.Top="0" 
                   IsHitTestVisible="False"/>

        <!-- Pontszám -->
        <TextBlock x:Name="ScoreDisplay" 
                   Text="Pont: 0" 
                   Canvas.Left="20" Canvas.Top="20" 
                   FontSize="32" FontWeight="Bold" 
                   Foreground="White"
                   Background="#AA000000" Padding="10,5"/>

        <!-- Eső státusza -->
        <TextBlock x:Name="RainStatusDisplay" 
                   Text="Eső: KI" 
                   Canvas.Left="20" Canvas.Top="70" 
                   FontSize="16" 
                   Foreground="White"
                   Background="#AA000000" Padding="8,3"/>

        <!-- Köd státusza -->
        <TextBlock x:Name="FogStatusDisplay" 
                   Text="Köd: KI" 
                   Canvas.Left="20" Canvas.Top="100" 
                   FontSize="16" 
                   Foreground="White"
                   Background="#AA000000" Padding="8,3"/>

        <!-- Game Over overlay -->
        <Rectangle x:Name="GameOverOverlay" 
                   Width="900" Height="600" 
                   Fill="Black" Opacity="0.7" 
                   Canvas.Left="0" Canvas.Top="0" 
                   Visibility="Collapsed"/>

        <TextBlock x:Name="GameOverText" 
                   Text="GAME OVER" 
                   Canvas.Left="200" Canvas.Top="150" 
                   FontSize="80" FontWeight="Bold" 
                   Foreground="Red" 
                   Visibility="Collapsed"/>

        <TextBlock x:Name="FinalScoreText" 
                   Text="Végső pont: 0" 
                   Canvas.Left="250" Canvas.Top="280" 
                   FontSize="48" FontWeight="Bold" 
                   Foreground="White" 
                   Visibility="Collapsed"/>

        <TextBlock x:Name="RestartText" 
                   Text="Nyomd meg a SPACE-t az újraindításhoz" 
                   Canvas.Left="150" Canvas.Top="380" 
                   FontSize="24" 
                   Foreground="Yellow" 
                   Visibility="Collapsed"/>
    </Canvas>
</Window>
