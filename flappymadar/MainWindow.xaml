<Window x:Class="FlappyBird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flappy Bird WPF" Height="550" Width="850">
    <Canvas x:Name="GameCanvas" KeyDown="GameCanvas_KeyDown" KeyUp="GameCanvas_KeyUp" Focusable="True">
        <Image x:Name="BackgroundImage" Source="/kepek/background.jpg" Canvas.Left="0" Canvas.Top="0" Stretch="Fill" Height="534" Width="850" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <Image x:Name="Bird" Source="/kepek/flappybird.png.png" Width="121" Height="127" Canvas.Left="65" Canvas.Top="207" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Rectangle x:Name="TopPipe" Width="80" Height="250" Fill="Green" Canvas.Left="600" Canvas.Top="0">
            <Rectangle.RenderTransform>
                <RotateTransform Angle="180" CenterX="40" CenterY="125"/>
            </Rectangle.RenderTransform>
        </Rectangle>

        <Rectangle x:Name="BottomPipe" Width="80" Height="250" Fill="Green" Canvas.Left="600" Canvas.Top="250"/>

        <TextBlock x:Name="ScoreText" Text="Pont: 0" Canvas.Left="10" Canvas.Top="10" FontSize="24" Foreground="White"/>
    </Canvas>
</Window>
