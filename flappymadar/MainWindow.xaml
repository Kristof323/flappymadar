<Window x:Class="FlappyBird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flappy Bird WPF" Height="550" Width="850" WindowStartupLocation="CenterScreen">
    <Canvas x:Name="GameCanvas" Focusable="True" Background="SkyBlue">
        <!-- Háttér -->
        <Image x:Name="BackgroundImage" Source="/kepek/background.jpg" Canvas.Left="0" Canvas.Top="0" Stretch="Fill" Height="534" Width="850"/>

        <!-- Madár -->
        <Image x:Name="Bird" Source="/kepek/flappymid.png" Width="50" Height="40" Canvas.Left="100" Canvas.Top="200"/>

        <!-- Eső cseppek (dinamikusan létrehozva kódban) -->
        <!-- Csövek (dinamikusan létrehozva kódban) -->

        <!-- Köd overlay -->
        <Rectangle x:Name="FogOverlay" Width="850" Height="550" Fill="LightGray" Canvas.Left="0" Canvas.Top="0" Opacity="0" IsHitTestVisible="False"/>

        <!-- Pontszám -->
        <TextBlock x:Name="ScoreText" Text="Pont: 0" Canvas.Left="10" Canvas.Top="10" FontSize="24" Foreground="White" FontWeight="Bold"/>

        <!-- Game Over -->
        <Rectangle x:Name="GameOverOverlay" Width="850" Height="550" Fill="Black" Canvas.Left="0" Canvas.Top="0" Opacity="0.7" Visibility="Collapsed"/>
        <TextBlock x:Name="GameOverText" Text="GAME OVER" Canvas.Left="250" Canvas.Top="150" FontSize="60" Foreground="White" FontWeight="Bold" Visibility="Collapsed"/>
        <TextBlock x:Name="FinalScoreText" Text="Végső pont: 0" Canvas.Left="300" Canvas.Top="250" FontSize="40" Foreground="White" Visibility="Collapsed"/>
        <TextBlock x:Name="RestartText" Text="Nyomd meg a SPACE-t az újraindításhoz" Canvas.Left="220" Canvas.Top="350" FontSize="20" Foreground="Yellow" Visibility="Collapsed"/>
    </Canvas>
</Window>
